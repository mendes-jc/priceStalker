<div style="display: flex; 
            align-items: center; 
            justify-content: center; 
            flex-direction: column; 
            padding: 10px">
  <strong style="font-size: 34px; 
                font-weight: bold; 
                color: #FFF">Hello {{name}}!</strong>
  <span style="color: #FFF">Here's the cheaper results for "{{searchPhrase}}" on eBay:</span>
  {{#each products}}
    <a href={{this.url}} style="text-decoration: none; color: inherit">
      <div style="display: flex; 
                  flex-direction: row; 
                  background: #EEE; 
                  border-radius: 8px; 
                  margin-bottom: 10px;">
        <img 
          src={{this.image}} 
          alt='product-image' 
          style="height: 200px; 
                width: 200px; 
                border-radius: 15px; 
                padding: 20px;"/>
        <div style="display: flex; 
                    flex-direction: column; 
                    align-items: flex-end; 
                    justify-content: center; 
                    padding-right: 20px">
          <span style="font-size: 20px;">
            {{this.title}}
          </span>
          <span style="font-size: 24px; 
                      font-weight: bold;">
            {{this.price}}
          </span>
        </div>
      </div>
    </a>
  {{/each}}
</div>